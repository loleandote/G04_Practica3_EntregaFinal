<mah:MetroWindow x:Class="EdicionInformeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="{Binding Titulo}" Height="450" Width="650">
    <Grid Margin="15">
        <DataGrid ItemsSource="{Binding Clasificaciones}" Height=" auto" IsReadOnly="True" AutoGenerateColumns="False" VerticalAlignment="Top" CanUserAddRows="False" RowHeaderWidth="0" CanUserResizeRows="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Width="*" Binding="{Binding Piloto.Nombre}"/>
                <DataGridTextColumn Header="Pais" Width="100" Binding="{Binding Piloto.Pais}"/>
                <DataGridTextColumn Header="Posición" Width="100" Binding="{Binding Posicion}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</mah:MetroWindow>
